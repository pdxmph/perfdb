<h1>Listing sites</h1>

<table>
  <tr>
    <th>Site name</th>
    <th>Site domain</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
 <tr class = "<%= cycle("even","odd") %>">
    <td><%= site.name %></td>
    <td><%= site.site_domain %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

