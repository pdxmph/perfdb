<h1>Listing editors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @editors.each do |editor| %>
  <tr class = "<%= cycle("even","odd") %>">
    <td><%= editor.name %></td>
    <td><%= editor.email %></td>
    <td><%= link_to 'Show', editor %></td>
    <td><%= link_to 'Edit', edit_editor_path(editor) %></td>
    <td><%= link_to 'Destroy', editor, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

