<h1>Content Source Overview</h1>

<table>
  <tr>
    <th>Content Source</th>
    <th>Average Page Views</th>
    <th>Average Cost</th>
    <th>Average Effort</th>
    <th>Cost/View</th>
  </tr>

<% @content_sources.each do |content_source| %>
  <tr class="<%= cycle("even", "odd") %>">
    <td><%= content_source.name %></td>
    <td><%= number_with_precision(content_source.avg_30_views, :precision => 2, :delimiter => ',') %></td>
    <td>$<%= number_with_precision(content_source.avg_cost, :precision => 2, :delimiter => ',') %></td>
    <td><%= number_with_precision(content_source.avg_effort, :precision => 2, :delimiter => ',') %></td>
    <td>$<%= number_with_precision(content_source.cost_view,  :precision => 2, :delimiter => ',') %></td>
  </tr>
  
  
  
<% end %>
</table>
<div class="span-22">
      <div class="span-10">
          <img src="<%= @source_views_chart %>" />
      </div>

      <div class="span-10">
          <img src="<%= @source_cost_chart %>" />
      </div>
  </div>
<br />
